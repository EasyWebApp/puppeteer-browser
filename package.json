{
  "name": "puppeteer-browser",
  "version": "0.3.2",
  "description": "Multiple Web browser controller based on Puppeteer API",
  "main": "dist/index.js",
  "directories": {
    "lib": "source/"
  },
  "engines": {
    "node": "^6.5.0"
  },
  "scripts": {
    "lint": "eslint source/ test/ --fix",
    "bundle": "babel source/ -d dist/",
    "prepublishOnly": "npm run lint  &&  npm run bundle",
    "build": "npm run prepublishOnly  &&  esdoc  &&  git add .",
    "start": "web-server docs/ -o",
    "preinstall": "npm set puppeteer_skip_chromium_download true",
    "install": "app-find chrome firefox -c",
    "check": "mocha -r babel-register -r should-sinon --no-timeouts -c --inline-diffs",
    "test": "npm run check -- --exit",
    "debug": "npm run check -- --inspect-brk",
    "precommit": "npm test  &&  npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/puppeteer-browser.git"
  },
  "keywords": [
    "Web",
    "browser",
    "Puppeteer",
    "testing",
    "automation"
  ],
  "author": "shiy2008@gmail.com",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/EasyWebApp/puppeteer-browser/issues"
  },
  "homepage": "https://easywebapp.github.io/puppeteer-browser",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "chokidar": "^2.0.4",
    "fs-match": "^1.3.4",
    "koapache": "^1.0.0",
    "promisify-node": "^0.5.0",
    "puppeteer": "^1.5.0",
    "puppeteer-fx": "0.0.4",
    "qrcode": "^1.2.0"
  },
  "optionalDependencies": {
    "puppeteer-ie": "^0.5.4"
  },
  "devDependencies": {
    "active-win": "^3.0.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "desktop-env": "^3.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-external-nodejs-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.19.1",
    "find-process": "^1.1.1",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "should": "^13.2.1",
    "should-sinon": "0.0.6",
    "sinon": "^6.1.3"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false
        }
      ],
      "dynamic-import-node"
    ]
  }
}
