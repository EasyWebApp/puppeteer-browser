{
  "name": "puppeteer-browser",
  "version": "0.3.4",
  "description": "Multiple Web browser controller based on Puppeteer API",
  "keywords": [
    "Web",
    "browser",
    "Puppeteer",
    "testing",
    "automation"
  ],
  "author": "shiy2008@gmail.com",
  "license": "Apache-2.0",
  "homepage": "https://easywebapp.github.io/puppeteer-browser",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/puppeteer-browser.git"
  },
  "bugs": {
    "url": "https://github.com/EasyWebApp/puppeteer-browser/issues"
  },
  "main": "dist/index.js",
  "directories": {
    "lib": "source/"
  },
  "engines": {
    "node": "^6.5.0"
  },
  "scripts": {
    "lint": "eslint source/ test/ --fix",
    "compile": "babel source/ -d dist/",
    "check": "mocha -r @babel/register -r should-sinon --no-timeouts -c --inline-diffs",
    "test": "npm run check -- --exit",
    "debug": "npm run check -- --inspect-brk",
    "build": "npm test  &&  npm run lint  &&  npm run compile",
    "prepublishOnly": "npm run build",
    "precommit": "npm run build  &&  esdoc  &&  git add .",
    "preinstall": "npm set puppeteer_skip_chromium_download true",
    "install": "app-find chrome firefox -c",
    "start": "web-server docs/ -o"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "chokidar": "^2.0.4",
    "fs-match": "^1.3.5",
    "koapache": "^1.0.4",
    "promisify-node": "^0.5.0",
    "puppeteer": "1.5.0",
    "puppeteer-fx": "0.0.4",
    "qrcode": "^1.2.2"
  },
  "optionalDependencies": {
    "puppeteer-ie": "^0.5.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "active-win": "^3.0.0",
    "babel-eslint": "^9.0.0",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "desktop-env": "^3.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-external-nodejs-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.6.0",
    "find-process": "^1.1.3",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^6.3.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "dynamic-import-node",
      "@babel/plugin-transform-runtime"
    ]
  }
}
